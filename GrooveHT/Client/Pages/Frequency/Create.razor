@page "/frequency/create"
@using GrooveHT.Shared.Models.Frequency;
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]
@inject HttpClient http
@inject NavigationManager navigation

<h3>Create</h3>
@if (errorMessage != null)
{
    <h5 class="text-danger">@errorMessage</h5>
}
<div class="container">
    <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group">
            <label>Name</label>
            <InputText class="form-control" @bind-Value="model.Frequency" />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-5">Submit</button>

    </EditForm>
</div>
@code {
    private FrequencyCreate model = new();
    private string errorMessage;
    private async void HandleSubmit()
    {
        var createRes = await http.PostAsJsonAsync<FrequencyCreate>("/frequency", model);
        if (createRes.IsSuccessStatusCode)
        {
            navigation.NavigateTo("/frequency");
        }
        else
        {
            errorMessage = "Could not create your frequency right now. Please try again later.";
        }
    }
}
